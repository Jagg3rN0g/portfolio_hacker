---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import Certifications from "../components/Certifications.astro";
import Blog from "../components/Blog.astro";
import YouTube from "../components/YouTube.astro";
---

<Layout title="Jagg3r | Penetration Tester">
	<main class="space-y-0">
		<Hero />
		<About />
		<Projects />
		<Certifications />
		<Blog />
		<YouTube />

		<footer
			class="py-12 border-t border-gray-900 text-center text-gray-600 text-sm"
		>
			<p>
				&copy; {new Date().getFullYear()} Jagg3r. All system rights reserved.
			</p>
			<p class="mt-2 text-xs">"Control is an illusion."</p>
		</footer>
	</main>
</Layout>
