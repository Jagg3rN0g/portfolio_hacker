---
import { Award, ShieldCheck } from "lucide-react";

const certifications = [
    {
        name: "OSCP",
        issuer: "OffSec",
        date: "2024",
        id: "OS-XXXXX",
    },
    {
        name: "eJPT",
        issuer: "eLearnSecurity",
        date: "2023",
        id: "EJP-XXXXX",
    },
    {
        name: "CompTIA Security+",
        issuer: "CompTIA",
        date: "2022",
        id: "COMP-XXXXX",
    },
    {
        name: "CEH Practical",
        issuer: "EC-Council",
        date: "2023",
        id: "ECC-XXXXX",
    },
];
---

<section id="certifications" class="py-20 max-w-4xl mx-auto px-4">
    <div class="flex items-end gap-4 mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white">
            <span class="text-accent-red">./</span>certifications
        </h2>
        <div class="h-px bg-gray-800 flex-1 mb-2"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {
            certifications.map((cert) => (
                <div class="border border-gray-800 bg-gray-900/30 p-4 transition-all hover:bg-white/5 hover:border-white/20 group">
                    <div class="flex items-center gap-3 mb-2">
                        <ShieldCheck className="w-6 h-6 text-gray-600 group-hover:text-accent-red transition-colors" />
                        <h3 class="font-bold text-lg text-gray-200">
                            {cert.name}
                        </h3>
                    </div>
                    <div class="text-sm text-gray-500">
                        <p>{cert.issuer}</p>
                        <p class="text-xs mt-1 opacity-60">
                            {cert.date} | ID: {cert.id}
                        </p>
                    </div>
                </div>
            ))
        }
    </div>
</section>
