---
import { Github, Linkedin, Mail, Youtube } from "lucide-react";
---

<section
    class="min-h-[80vh] flex flex-col justify-center max-w-4xl mx-auto px-4"
>
    <div class="space-y-6">
        <p
            class="text-xl md:text-2xl text-gray-500 font-bold typing-effect w-fit"
        >
            Hello friend.
        </p>

        <h1 class="text-5xl md:text-7xl font-bold tracking-tight">
            I am <span
                id="hero-name"
                class="text-white relative inline-block glitch-text"
                data-text="Jagg3r">Jagg3r</span
            >
        </h1>

        <p class="text-xl md:text-2xl text-gray-400">
            <span class="text-accent-red"> Ethical Hacker </span>
        </p>

        <!-- <p class="text-xl md:text-2xl text-gray-400">
            Penetration Tester <span class="text-accent-red">/</span> Ethical Hacker
        </p> -->

        <div class="flex gap-6 pt-4">
            <a
                href="https://github.com/jagg3rsec"
                target="_blank"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="GitHub"
            >
                <Github className="w-8 h-8" />
            </a>
            <a
                href="https://linkedin.com/in/francisco-garao"
                target="_blank"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="LinkedIn"
            >
                <Linkedin className="w-8 h-8" />
            </a>
            <a
                href="mailto:rootcitofrank@gmail.com"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="Email"
            >
                <Mail className="w-8 h-8" />
            </a>
            <a
                href="https://youtube.com/@jagg3rsec"
                target="_blank"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="YouTube"
            >
                <Youtube className="w-8 h-8" />
            </a>
        </div>

        <style>
            /* Glitch Effect */
            .glitch-text::before,
            .glitch-text::after {
                content: attr(data-text);
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: black;
            }

            .glitch-text::before {
                left: 2px;
                text-shadow: -1px 0 #b91c1c;
                clip: rect(24px, 550px, 90px, 0);
                animation: glitch-anim-2 3s infinite linear alternate-reverse;
            }

            .glitch-text::after {
                left: -2px;
                text-shadow: -1px 0 #00ffff;
                clip: rect(85px, 550px, 140px, 0);
                animation: glitch-anim 2.5s infinite linear alternate-reverse;
            }

            @keyframes glitch-anim {
                0% {
                    clip: rect(10px, 9999px, 86px, 0);
                }
                20% {
                    clip: rect(31px, 9999px, 12px, 0);
                }
                40% {
                    clip: rect(96px, 9999px, 11px, 0);
                }
                60% {
                    clip: rect(8px, 9999px, 20px, 0);
                }
                80% {
                    clip: rect(48px, 9999px, 63px, 0);
                }
                100% {
                    clip: rect(21px, 9999px, 78px, 0);
                }
            }

            @keyframes glitch-anim-2 {
                0% {
                    clip: rect(50px, 9999px, 7px, 0);
                }
                20% {
                    clip: rect(14px, 9999px, 133px, 0);
                }
                40% {
                    clip: rect(4px, 9999px, 2px, 0);
                }
                60% {
                    clip: rect(93px, 9999px, 83px, 0);
                }
                80% {
                    clip: rect(110px, 9999px, 23px, 0);
                }
                100% {
                    clip: rect(59px, 9999px, 9px, 0);
                }
            }
        </style>
    </div>
</section>

<script>
    const names = ["Jagg3r", "Hacker"];
    let arrayIndex = 0;
    const element = document.getElementById("hero-name");
    const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()";

    function scrambleText(targetText) {
        if (!element) return;

        let iterations = 0;
        const interval = setInterval(() => {
            element.textContent = targetText
                .split("")
                .map((letter, index) => {
                    if (index < iterations) {
                        return targetText[index];
                    }
                    return chars[Math.floor(Math.random() * chars.length)];
                })
                .join("");

            if (iterations >= targetText.length) {
                clearInterval(interval);
                element.setAttribute("data-text", targetText);
            }

            iterations += 1 / 3;
        }, 30);
    }

    // Start the loop
    if (element) {
        // Initial delay
        setTimeout(() => {
            setInterval(() => {
                arrayIndex = (arrayIndex + 1) % names.length;
                scrambleText(names[arrayIndex]);
            }, 3000);
        }, 1000);
    }
</script>
